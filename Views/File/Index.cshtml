@using _U21475009_HW03_.Models
@model IEnumerable<_U21475009_HW03_.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

@foreach (FileModel file in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => file.FileName)
        </td>
        <td>
            @Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName }) |
           
            @Html.ActionLink("Delete", "Delete", new { fileName = file.FileName})
        </td>
    </tr>
}

</table>
